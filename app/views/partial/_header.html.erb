<header class="navbar navbar-expand-lg navbar-light sticky-top">
  <div class="container">
    <%= link_to(image_tag("header_logo.jpg", :alt => "header-logo"), root_path, id: 'logo') %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="nav navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li><%= render 'layouts/search'%></li>
          <li><%= link_to '料理投稿', new_dish_path, class: "btn btn-warning btn-record dish-registration" %></li>
          <li class="dropdown">
            <a class="dropdown btn btn-link link" href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="fas fa-user-cog"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'プロフィール', current_user, class:"link" %></li>
              <li><%= link_to 'お気に入り一覧', favorites_path, class:"link" %></li>
              <li><%= link_to '作るリスト一覧', lists_path, class:"link" %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, class:"link", method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="ml-auto"><%= link_to '新規登録', new_user_registration_path, class:"link" %></li>
          <li class="ml-auto"><%= link_to 'ログイン', new_user_session_path, class:"link  new-registration" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
