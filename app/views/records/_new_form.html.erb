<%= form_with model: @record, local: true do |f| %>
  <%= hidden_field_tag :dish_id, @dish.id %>
  <%= hidden_field_tag :list_id, @list.id if @list.present? %>
  <div class="row">
    <div class="col-md-8">
      <div class="field">
        <%= f.text_area :content, placeholder: "クッキングレコードを追加..." %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <% if @list.present? %>
        <%= f.submit "レコード", class: "btn btn-primary", data: { confirm: "リストから削除しクッキングレコードを追加しますか？" } %>
      <% else %>
        <%= f.submit "レコード", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
<% end %>
