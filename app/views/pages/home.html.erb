<div class="main">
  <div class="form-wrap">
    <% if user_signed_in? %>
      <div class="text-center">
        <h3>みんなの料理 (<%= @feed_items.count %>品) </h3>
        <%= render 'partial/feed' %>
      </div>
    <% else %>
      <center>
        <h1 class="title">毎日のお料理に<br>記録や写真を保存！</h1>
        <%= link_to 'クッキングレコードを始める', new_user_registration_path, class: "btn btn-primary btn-lg btn-demo" %>
      </center>
    <% end %>
  </div>
</div>
