<% provide(:title, "お気に入り") %>
<div class="main">
  <div class="form-wrap">
    <div class="field text-center">
      <div>
        <h3>お気に入り (<%= @favorites.count %>品)</h3>
      </div>
    </div>
    <% if @favorites.present? %>
      <ol class="favorites">
        <%= render @favorites %>
      </ol>
    <% end %>
    <%= will_paginate @favorites %>
  </div>
</div>
