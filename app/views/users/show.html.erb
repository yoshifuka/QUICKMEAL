<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="user-picture-box">
          <%= link_to((image_tag @user.profile_photo.url, width: 150), user_path(@user.id)) if @user.profile_photo.url.present? %>
        </div>
      </div>
      <div class="col-md-6">
        <h4 class="show-user-name"><%= @user.username %></h4>
        <div>
          <%= @user.introduction %>
        </div>
        <% if current_user == @user %>
          <div class="account-edit"><%= link_to "プロフィール編集", edit_user_registration_path(@user) %></div>
        <% end %>
      </div>
    </div>
    <div class="container text-center">
        <% if @user.dishes.any? %>
          <h3 class="dish-name">料理 (<%= @user.dishes.count %>品)</h3>
          <ol class="dishes">
            <%= render @dishes %>
          </ol>
          <%= will_paginate @dishes %>
        <% end %>
    </div>
  </div>
</div>
